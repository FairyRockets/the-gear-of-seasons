{
  "name": "bridge",
  "version": "2.0.0",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "up": "npm-check-updates -u && npm install && npm dedupe && npm audit fix",
    "test": "jest"
  },
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  /**
   * We need a workaround to sub-path exports in TS.
   * https://github.com/teppeis/typescript-subpath-exports-workaround
   */
  "exports": {
    ".": "./dist/lib.js",
    "./fml": "./dist/fml.js"
  },
  "typesVersions": {
    "*": {
      "fml": ["dist/fml"]
    }
  },
  "author": "Kaede Fujisaki",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "jest": "^27.0.4",
    "npm-check-updates": "^11.6.0"
  },
  "dependencies": {
    "typescript": "^4.3.2"
  }
}
